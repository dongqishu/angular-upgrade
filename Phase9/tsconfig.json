{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": false,
        "noImplicitAny": false,
        "pretty": true,
        "stripInternal": true,
        "noEmitHelpers": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}